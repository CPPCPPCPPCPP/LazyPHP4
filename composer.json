{
    "require":
    {
        "php":">=5.3.3"
    },
    "require-dev":     
    {      
        "behat/behat": "@stable",     
        "behat/mink": "@stable",        
        "behat/mink-extension": "@stable",       
        "behat/mink-goutte-driver": "@stable",       
        "crada/php-apidoc": "@dev",     
        "robmorgan/phinx": "@stable",     
        "phing/phing": "@stable",     
        "phpunit/phpunit": "@stable",     
        "phpdocumentor/phpdocumentor": "@stable",     
        "sebastian/phpcpd": "@stable",     
        "phpmd/phpmd": "@stable",     
        "pdepend/pdepend": "@stable",     
        "phploc/phploc": "@stable",     
        "pear/versioncontrol_git": "@dev",  
        "pear/archive_tar": "@stable",     
        "tedivm/jshrink": "@stable",     
        "phpunit/php-invoker": "@stable"
    },
    "autoload":
    {
        "psr-4":
        {
            "Lazyphp\\": "_lp/lib/Lazyphp/",
            "Lazyphp\\Controller\\": "controller/"
        }
    },
    "config":
    {
        "secure-http":false
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
